#!/bin/csh -f
# Script to copy .cmd wrappers to install directory
# First argument is install directory, 2nd is wrapper name, then script names
#
#  $Author$
#
#  $Date$
#
#  $Revision$
#
#  $Log$
#  Revision 1.1  2006/09/26 22:18:46  mast
#  Added to package
#
#

if ($#argv < 3) then
    echo "copywrappers: Too few arguments"
    exit 1
endif

echo "In copywrappers"
set instdir = $argv[1]
set wrapper = $argv[2]
shift ; shift
while ($#argv > 0)
    if (-x $argv[1]) then
        set name = $argv[1]:t
        \cp $wrapper $instdir/$name.cmd
        echo "$status status from copy"
        chmod a+rx $instdir/$name.cmd
        echo "$status status from chmod"
    endif
    shift
end
exit 0
