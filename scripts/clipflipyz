#! /bin/csh -f
# runs clip flipyz

#  $Author$
#
#  $Date$
#
#  $Revision$
#
#  $Log$


nohup

set pn = "clipflipyz"

if ($#argv < 2)then
  echo "Usage: $pn input_file output_file"
  exit 0
endif

if ($?IMOD_DIR) then
    setenv PATH "$IMOD_DIR/bin:$PATH"
endif

echo2 Shell PID: $$

echo "Flipping Y and Z..."
echo clip flipyz "$argv[1]" "$argv[2]"
clip flipyz "$argv[1]" "$argv[2]"
if ($status) goto clean

exit 0

clean:
\rm -f $argv[2]
echo "ERROR: $pn - unable to run clip flipyz $argv[1] $argv[2]"
exit 1
