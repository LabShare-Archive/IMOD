# This is a file to be sourced by csh scripts to set tmpdir
# The heirarchy is to use IMOD_TMPDIR
if ($?IMOD_TMPDIR) then
    if (-w "$IMOD_TMPDIR") then
        set checkspace = ($IMOD_TMPDIR)
        if ($#checkspace > 1) then
            echo "WARNING: IMOD_TMPDIR ($IMOD_TMPDIR) contains spaces and cannot be used"
        else
            set tmpdir = "$IMOD_TMPDIR"
        endif
    endif
endif
if (! -w "$tmpdir") set tmpdir = /tmp
if (! -w "$tmpdir") set tmpdir = .
set cygthere = `which cygpath >& /dev/null`
if (! $status) set tmpdir = `cygpath -m "$tmpdir"`
