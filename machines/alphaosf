##############################################################################
#
# Dec Alpha running OSF1
# NOT TESTED - MODIFIED ONLY FOR CONSISTENCY
#

# Select your favorite compilers.
echo "CC      = cc"    >> $configure
echo "CXX     = CC"    >> $configure
echo "CPPC    = CC"    >> $configure
echo "FC     = f77"   >> $configure
echo "CP      = \cp"    >> $configure
echo "FIND    = \find"  >> $configure

# Can't make this until figure out what fortran library(s) are needed in link
if (-e plugs/linetrack) then
(cd plugs/linetrack; touch linetrack.o linesubs.o reducepts.o linegui.o conttrack.o linetrack.so)
endif

#
# Try shared libraries as default.
#
if ($shared_libs != false) then
	echo "AR      = ld"               >> $configure
	echo "ARFLAGS = -shared -all -o "  >> $configure
	echo 'LDFLAGS = -L$(LIBDIR) ' >> $configure
else
	echo "AR      = ar"          >> $configure
	echo "ARFLAGS = clq "         >> $configure
	echo 'LDFLAGS = -L$(LIBDIR)' >> $configure
endif

echo 'MAKELIB   = $(AR) $(ARFLAGS)'   >> $configure
echo 'MAKELIBSO = ld -shared -all -o' >> $configure
echo "RANLIB    = true"               >> $configure
echo "LIBEXT    = so"            >> $configure

echo "CLIBS   = -lm -lc"   >> $configure
echo 'LIBS     = $(CLIBS)' >> $configure
echo 'FORTCLIBS = $(CLIBS)'  >> $configure
echo "XLIBS   = -lXm -lXt -lX11 -lXext -lPW" >> $configure
echo "GLIBS = -lGLw -lGLU -lGL" >> $configure
echo "IMLIBS     = -lhvem -lim -lifft -limod" >> $configure
echo 'GRAPHLIBS    = -ldnmncar $(IMLIBS) $(XLIBS)' >> $configure

# This needs to be worked out
echo 'IMODCC  = $(CC)'    >> $configure
echo "PLUGLIBS = "     >> $configure
echo 'MAKEF77PLUGIN = ld -shared -all -o' >> $configure
# This was here
echo 'FLCC    = $(CC)'    >> $configure
echo "F77LIBS = -lF77 -lU77 -lI77 -lisam" >> $configure

if ($debug == true) then
	set optimization = "-g +w"
endif

\cp $endian_dir/little_endian.inc $endian_dir/endian.inc
echo '#define B3D_LITTLE_ENDIAN' >> $hconfigure
echo '#define SWAP_IEEE_FLOATS' >> $hconfigure

echo "CFLAGS   = -D -DGLWINCINX $flags $defines $optimization $include_flags" >> $configure
echo "CXXFLAGS = $flags $defines $optimization $include_flags" >> $configure
echo "NOOPFFLAGS   = $flags $optimization -O0 $include_flags" >> $configure

echo "FFALLBACK   = $flags $optimization  $include_flags" >> $configure
echo "CFALLBACK   = $flags -D -DGLWINCINX $defines $optimization $include_flags" >> $configure
echo 'LDFALLBACK = $(LDFLAGS)'       >> $configure
echo 'NOOPFFALLBACK = $(NOOPFFLAGS)' >> $configure

# Build tilt from Fortran subroutines, skip Linux libs
echo 'TILTOBJS = bpsumnox.o bpsumxtilt.o bpsumlocal.o' >> $configure
echo 'LINUXFLIBS = ' >> $configure

set usfftdir = $source_dir/USFFTlib/alpha
